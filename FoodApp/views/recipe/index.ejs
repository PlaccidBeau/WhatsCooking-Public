<% layout('layout/boilerplate') -%> <% include('../partial/navbar.ejs') -%>
<h1>All Recipes</h1>
<div><a href="/recipe/new">Add Recipe</a></div>

<% for (let recipe of recipes){ %>
<div
  class="card"
  mb-3
>
  <div class="row">
    <div class="col-md-4">
      <!-- Enter image here -->
    </div>
    <div class="card-body">
      <h5 class="card-title">
        <a href="/recipes/<%=recipe._id  %>"><%=recipe.title %></a>
      </h5>
      <p class="card-title"><%=recipe.description %></p>
      <p class="card-text"></p>
      <div class="col-mg-8"></div>
    </div>
  </div>
</div>
<% } %> <% include('../partial/footer.ejs') -%>
