<% layout('layout/boilerplate') %>
<link
  rel="stylesheet"
  href="/stylesheets/stars.css"
/>

<div class="row">
  <div class="col-6">
    <div
      id="recipeCarousel"
      class="carousel slide"
      data-ride="carousel"
    >
      <div class="carousel-inner">
        <% recipe.images.forEach((img, i )=> {%>
        <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
          <img
            src="<%= img.url%>"
            class="d-block w-100"
            alt=""
          />
        </div>
        <% }) %>
      </div>
      <% if(recipe.images.length > 1) {%>
      <button
        class="carousel-control-prev"
        type="button"
        data-bs-target="#recipeCarousel"
        data-bs-slide="prev"
      >
        <span
          class="carousel-control-prev-icon"
          aria-hidden="true"
        ></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button
        class="carousel-control-next"
        type="button"
        data-bs-target="#recipeCarousel"
        data-bs-slide="next"
      >
        <span
          class="carousel-control-next-icon"
          aria-hidden="true"
        ></span>
        <span class="visually-hidden">Next</span>
      </button>
      <% } else if(recipe.images.length == 0) {%>
      <img
        src="https://res.cloudinary.com/dpakqvhn6/image/upload/v1697812888/fi1ct54ag3cemzranouc.png"
        class="img-fluid"
        alt=""
      />
      <% } %>
    </div>
    <div class="card mb-3">
      <div class="card-body">
        <h2 class="card-title"><%= recipe.title %></h2>
        <h5 class="card-text"><%= recipe.description %></h5>
        <h6>By: <%= recipe.author.username %></h6>
        <div class="ingredients">
          <h4>Ingredients</h4>
          <h6><%= recipe.ingredients %></h6>
        </div>
        <div class="directions">
          <h4>Directions</h4>
          <h6><%= recipe.directions %></h6>
        </div>
      </div>
    </div>
    <% if(currentUser&& recipe.author.equals(currentUser)){ %>
    <div class="card-body">
      <a
        href="/recipes/<%= recipe._id %>/edit"
        class="card-link btn btn-info"
        >Edit</a
      >
      <form
        class="d-inline"
        action="/recipes/<%= recipe._id  %>?_method=DELETE"
        method="POST"
      >
        <button class="btn btn-danger">Delete</button>
      </form>
    </div>
    <% } %>
  </div>

  <div class="col-6">
    <% if(currentUser){ %>
    <h2>Reviews</h2>
    <form
      action="/recipes/<%= recipe._id %>/reviews"
      method="POST"
      class="mb-3 validated-form"
      novalidate
    >
      <div class="mb-3">
        <fieldset class="starability-basic">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="1"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label
            for="first-rate1"
            title="Terrible"
            >1 star</label
          >
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label
            for="first-rate2"
            title="Not good"
            >2 stars</label
          >
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label
            for="first-rate3"
            title="Average"
            >3 stars</label
          >
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label
            for="first-rate4"
            title="Very good"
            >4 stars</label
          >
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label
            for="first-rate5"
            title="Amazing"
            >5 stars</label
          >
        </fieldset>
      </div>
      <div class="mb-3">
        <textarea
          class="form-control"
          name="review[body]"
          placeholder="Write a review"
          id="body"
          cols="30"
          rows="3"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <button class="btn btn-success">Submit</button>
    </form>

    <% } %> <% for (let oneReview of recipe.reviews) { %>

    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title"><%= oneReview.author.username %></h5>
        <p
          class="starability-result"
          data-rating="<%=oneReview.rating %>"
        >
          Rated: <%= oneReview.rating %> stars
        </p>
        <h6 class="card-text"><%= oneReview.body %></h6>
        <% if(currentUser&& oneReview.author.equals(currentUser)){ %>
        <form
          action="/recipes/<%= recipe._id  %>/reviews/<%= oneReview._id  %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger">Delete</button>
        </form>
        <% }%>
      </div>
    </div>
    <% } %>
  </div>
</div>
